generator client {
  provider = "prisma-client-js"
}

datasource db {
  // mysql, postgresql, sqlite, sqlserver, oracle
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaign {
  id         String   @id @default(uuid())
  name       String
  startDate  DateTime
  endDate    DateTime?
  wishes     Wish[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model User {
  id         String   @id @default(uuid())
  firstName  String
  lastName   String
  email      String   @unique
  wishes     Wish[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Wish {
  id             String      @id @default(uuid())
  user           User        @relation(fields: [userId], references: [id])
  userId         String
  campaign       Campaign    @relation(fields: [campaignId], references: [id])
  campaignId     String
  wishDates      WishDate[]
  familyStatus   FamilyStatus
  childCount     Int
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}

model WishDate {
  id       String   @id @default(uuid())
  wish     Wish     @relation(fields: [wishId], references: [id])
  wishId   String
  date     DateTime
}

enum FamilyStatus {
  Isolated
  Family
}